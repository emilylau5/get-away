            <div class="col-sm-offset-2 col-sm-6">
              <button type="submit" class="btn btn-default">Sign in</button>
              <hr>
              <p>Need an account?   <span><a href="#" data-toggle="modal" data-target="#myModal">Sign up</span></p>
            </div>
          </div>
        </form>    
      </div>
    </div>
    
